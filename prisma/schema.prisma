generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Users {
  id              Int     @id @default(autoincrement())
  nombres         String?
  apellido        String?
  numeroDocumento String 
  tipoDocumento   Int
  codigoEmpresa   Int?
  codigoSector    Int?
  password        String
  rolUser         Int?
  email           String @unique
  
  @@unique([tipoDocumento, numeroDocumento])
}

model Roles {
  id          Int    @id @default(autoincrement())
  nombre      String
  descripcion String
}

model Empresa {
  id          Int    @id @default(autoincrement())
  descripcion String
}

model Sector {
  id          Int    @id @default(autoincrement())
  descripcion String
}
